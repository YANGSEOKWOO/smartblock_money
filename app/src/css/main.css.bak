body {
	width: 1410px;
	font-family: sans-serif;
	margin: 0 auto ;
}

#logo{
	width:300px;
}
#app{
	display:flex;
	margin-bottom: 15px;
}
#app_info{
	margin: 9px 0px 0px 0px;
	background: url(plus.png) no-repeat;
	border: none;
	width: 24px;
	height: 24px;
	cursor: pointer;

}

/*app_name in top */
	#app_name { 
	  position:relative; 
	  margin: 0px 5px 0px 45%;
	}
	#name {
	  font-size:19px;
	  padding:5px 5px 5px 5px;
	  display:block;
	  width:300px;
	  border:none;
	  border-bottom:1px solid #757575;
	}
	#name:focus 		
	{ outline:none; }

	#name:focus ~ label, #name:valid ~ label{
	  left:-100px;
	  font-size:18px;
	  color:#000000;
	}

	#label {
	  color:#999; 
	  font-size:20px;
	  font-weight:normal;
	  position:absolute;
	  pointer-events:none;
	  left:5px;
	  top:5px;
	  transition:0.2s ease all; 
	  -moz-transition:0.2s ease all; 
	  -webkit-transition:0.2s ease all;
	}

/*left bar */
#device_tab {
  float:left; 
  width: 335px;
  height:700px;
  border: 1px solid #eee;
}
.share-btn {
  float:left; 
  width: 105px;
  height: 100px;
  margin: 2px 3px 14px 3px; 
  text-align: center;
  cursor: pointer;
  box-shadow: 0 5px 10px rgb(0, 0, 40, 0.03);
  overflow: hidden;
}
.share-btn:hover{
  background: red;
  background: radial-gradient(#bababa,  #fff,  #fff);
  transition: opacity 0.3s ease-out;
}
.share-btn:hover p{
  color: #ffff;
}


.share-btn .cta {
  color: #bababa;
  margin: 30px 0 0 0;
  text-transform: uppercase;
  font-size: 22px;
  letter-spacing: 1px;
  transition: all 0.6s ease-in-out;
}
.share-btn .close {
  cursor: pointer;
  float:right; 
  width: 24px;
  height: 24px;
  margin-right: 10px;
  border: none;
  opacity: 0;
  transform: rotate(-45deg);
  transform-origin: center center;
  background: url(close.png) no-repeat;
  transition: all 0.2s cubic-bezier(0.3, 0, 0, 1.3);
}
.share-btn .social { 
  overflow: hidden;
  list-style-type: none;
  margin: 50px auto 0 auto;
  transition: all 10s ease-in-out;
}
.share-btn .social button {
	float:left; 
	width: 150px;
	height: 50px;
	background-color: #fff;
	border: 1px solid #fff;
	margin: 0px 2px 5px 2px; 
	text-align: center;
	cursor: pointer;
	box-shadow: 0 5px 10px rgb(0, 0, 40, 0.03);
	overflow: hidden;

	font-size: 80%;
	transform: scale(0.7) translateX(10px) translateY(-10px);
	transition: all 0.25s ease-in-out;
	opacity: 0; 
}
.share-btn .social button:hover {
		background: #e2e2e2;
	border: solid 1px #fff;
}
.share-btn .social button:active {
		background: #000;
}
.clicked {
  width: 330px;
  height:700px;  
  cursor: auto;
 background: #fff;
}
.share-btn.clicked{
	position: fixed;
	left: 0x;
	top: 135px;
 background: #fff;
	border: 1px solid red;
}
.share-btn.clicked .cta {
  left: 40px;
  top: 30px;
  transform: translateX(0) translateY(0);
  color: #6d89c4;
}
.share-btn.clicked .close {
  opacity: 1;
  transform: rotate(0deg);
}
.share-btn.clicked .social button {
  transform: scale(1) translateX(0) translateY(0);
  opacity: 1;
}

/*main */
#box{
	float:left;
}
.blocklyMainBackground { 
  fill: #fff !important; 
} 
.blocklyToolboxDiv {
    background-color: #fff;
}
/*right bar */
.tab {
	position: relative; 
	float: left;
	margin-left: -1px;
	 border-top: solid 1px #eee;
	 border-right: solid 1px #eee;
	 border-bottom: solid 1px #eee;
}

.tab button {
	display: block;
	background-color: #eee;
	color: black;
	padding: 22px 16px;
	width: 100%;
	height: 233px;
	border: none;
	outline: none;
	text-align: left;
	cursor: pointer;
	transition: 0.3s;
	font-size: 17px;
}

/*mark in bottom */
#bottom{
	float:right;
	color:#999;
	font-size:13px; 
}
a{
	color:#999;
}
